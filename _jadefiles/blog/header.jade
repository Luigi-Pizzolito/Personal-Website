script.
    /*
    * NavBar
    */
    function mobileNav() {
        document.querySelector('.mobile-nav').classList.toggle('is-open');
        document.querySelector('.mobile-nav-toggle').classList.toggle('is-open');
        document.querySelector('.main-pad').classList.toggle("extrapad")
        document.querySelector('main').classList.toggle("extrapad")

        try {
            document.querySelector('.right-sidebar').querySelector('.main-pad').classList.toggle("extrapad")
        } catch (error) {
            
        }
        
    }