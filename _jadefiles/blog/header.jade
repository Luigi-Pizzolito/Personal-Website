mixin nav-content()
    ul
        li
            a(href="/") Home
        li
            a(href="/static/about.html",id="navb-about") About
        li
            .dropdown
                a.dropbtn(href="/projects",id="navb-projects") Projects 
                    i.fa.fa-caret-up
                .dropdown-content.threei
                    a(href="/projects/videography",id="navb-videography") Videography
                    a(href="/projects/software",id="navb-software") Software
                    a(href="/projects/hardware",id="navb-hardware") Electronics
        li
            .dropdown
                a.dropbtn(href="#") Experiences 
                    i.fa.fa-caret-up
                .dropdown-content.twoi
                    a(href="/projects/publicspeaking",id="navb-publicspeaking") Public Appearances
                    a(href="/projects/theatre",id="navb-theatre") Theatre Tech
        li
            a(href="/projects/academics",id="navb-academics") Academics/CV
        li
            a(href="/static/contact.html",id="navb-contact") Contact

