        li
            a.faded(href="/projects/hardware",id="nav-hardware") Electronics
        li
            a.faded(href="/projects/publicspeaking",id="nav-publicspeaking") Public Appearances
        li
            a.faded(href="/projects/theatre",id="nav-theatre") Theatre Tech
        li
            a(href="/projects/academics",id="nav-academics") Academics/CV
