                +nav-content()
    .sec-nav











    .header-position

        a(href="/").logo-div
            h1.logo Luigi Pizzolito
        span.logo-desc Luigi Pizzolito

        .mobile-nav-toggle(onclick="mobileNav();"): span

.mobile-nav
    .med-elem(onclick="mobileNav()")
        +nav-content-mobile()
    .sml-elem
        select(name="page",id="droppagegoto",class="blog-cta sidebar-button",onchange="mobileNav();function goto(uri) {window.location.pathname=uri;} setTimeout(() => {goto(this.value);}, 500);")
            +nav-content-mobile-dropdown()
        hr
        #transplant
        hr
        .sttcont
            button(id="stt-nav",class="blog-cta sidebar-button",onclick="window.scrollTo({top: 0,behavior:'smooth'}); mobileNav();") Scroll to Top

script.
    /*
    * NavBar
    */
    function mobileNav() {
        document.querySelector('.mobile-nav').classList.toggle('is-open');
        document.querySelector('.mobile-nav-toggle').classList.toggle('is-open');
        document.querySelector('.main-pad').classList.toggle("extrapad")
        document.querySelector('main').classList.toggle("extrapad")

        try {
            document.querySelector('.right-sidebar').querySelector('.main-pad').classList.toggle("extrapad")
        } catch (error) {
            
        }
        
    }